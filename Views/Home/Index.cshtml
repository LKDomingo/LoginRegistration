@{
    ViewData["Title"] = "Home Page";
}
@model User;

<div class="row text-center">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-6">Register to this Cooool Site!</h1>
        <a href="/login">Login</a>
    </div>
    <form action="/user/register" method="post" class="p-3 my-3">
        <div class="d-flex justify-content-start align-items-start gap-5">
            <div class="form-group d-flex flex-column justify-content-start align-items-start">
                <label for="FirstName">First Name</label>
                <input asp-for="FirstName" class="mt-1">
                <small class="mb-3"><span asp-validation-for="FirstName" class="text-danger"></span></small>
                <label for="LastName">Last Name</label>
                <input asp-for="LastName" class="mt-1">
                <small class="mb-3"><span asp-validation-for="LastName" class="text-danger"></span></small>
                <label for="Email">Email</label>
                <input asp-for="Email" class="mt-1">
                <small class="mb-3"><span asp-validation-for="Email" class="text-danger"></span></small>
                <input type="submit" value="Sign Up Now" class="btn btn-primary">
            </div>
            <div class="form-group d-flex flex-column justify-content-start align-items-start">
                <label for="Password">Password</label>
                <input asp-for="Password" class="mt-1">
                <small class="mb-3"><span asp-validation-for="Password" class="text-danger"></span></small>
                <label for="PassConfirm">Confirm Password</label>
                <input asp-for="PassConfirm" class="mt-1">
                <small class="mb-3"><span asp-validation-for="PassConfirm" class="text-danger"></span></small>
            </div>
        </div>
    </form>
</div>
